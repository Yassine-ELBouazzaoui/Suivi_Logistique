<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView android:layout_margin="5dp"
    android:elevation="4dp" app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="205dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


-<LinearLayout android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/cardbg"
    android:padding="12dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/displayname"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/headercolor"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/displayname3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layoutDirection="inherit"
            android:text="Conducteur"
            android:textColor="@color/headercolor"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/displaynom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="User Nom"
        android:textSize="25sp" />

    <TextView android:layout_height="wrap_content" android:layout_width="300dp" android:text="User Email" android:textSize="25sp" android:id="@+id/displayemail" android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/displaycontact"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="3dp"
        android:text="User Mobile"
        android:paddingBottom="15dp"
        android:textSize="25sp" />

</LinearLayout>

</androidx.cardview.widget.CardView>