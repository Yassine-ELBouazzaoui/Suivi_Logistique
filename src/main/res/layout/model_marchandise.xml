<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView android:layout_margin="5dp"
    android:elevation="4dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    -<LinearLayout android:layout_margin="10dp" android:layout_height="wrap_content" android:layout_width="match_parent" android:background="@color/cardbg" android:padding="12dp" android:orientation="vertical">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/displayCodeM"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:text="CodeM"
            android:textColor="@color/headercolor"
            android:textSize="25sp"
            android:textStyle="bold" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="top|end"
            app:fabCustomSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_eye"
            tools:ignore="SpeakableTextPresentCheck" />
     </LinearLayout>

     <TextView
         android:id="@+id/displayusername"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="3dp"
         android:text="username"
         android:textSize="25sp" />

     <TextView android:layout_height="wrap_content"
         android:layout_width="300dp"
         android:text="villeD"
         android:textSize="25sp"
         android:id="@+id/displayvilleD"
         android:layout_marginTop="3dp"/>

     <TextView
         android:id="@+id/displayvilleF"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="3dp"
         android:text="villeF"
         android:textSize="25sp" />




 </LinearLayout>

 </androidx.cardview.widget.CardView>