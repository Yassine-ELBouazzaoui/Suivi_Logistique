<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView android:layout_margin="5dp"
    android:elevation="4dp" app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    android:layout_gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    -<LinearLayout android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/cardbg"
    android:padding="12dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">



        <TextView
            android:id="@+id/CodeP"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:text="Code Produit"
            android:textColor="@color/headercolor"
            android:textSize="25sp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/NomC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Nom Client"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/NomP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Nom Produit"
        android:textSize="25sp" />

    <TextView
          android:layout_height="wrap_content"
           android:layout_width="300dp"
        android:text="Poid Produit"
        android:textSize="25sp"
        android:id="@+id/PoidP"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/PrixP"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Prix Produit"
        android:paddingBottom="15dp"
        android:textSize="25sp" />

</LinearLayout>

</androidx.cardview.widget.CardView>