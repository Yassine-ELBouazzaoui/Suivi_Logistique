<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.dashboard.DashboardFragment"
android:orientation="vertical"
android:background="@drawable/bg">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back,"
        android:textSize="20dp"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t1"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.04"
        android:text="MAGESHKUMAR"
        android:textColor="#fff"
        android:textSize="28dp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/profile"
        android:layout_alignParentRight="true"/>

</RelativeLayout>

<LinearLayout
    android:layout_width="385dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@drawable/card_view"
    android:layout_gravity="center"
    android:layout_marginTop="20dp">

    <TextView
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="42dp"
        android:text="Total Marchandise LivrÃ©"
        android:textColor="#FFFFFFFF"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/pri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3,729.00 DH"
        android:textSize="30dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"/>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="25dp">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#ff5d9e"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_location_on_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location 10"
                android:textAlignment="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#8f71ff"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/transfer"/>

            <TextView
                android:id="@+id/liv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Livraison "
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="22dp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#3fefef"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@drawable/ic_baseline_view_in_ar_242"/>

            <TextView
                android:id="@+id/pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produit   "
                android:textSize="22dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Livraison"
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:textColor="#516b9e"
        android:letterSpacing="0.02"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See All"
        android:textSize="23dp"
        android:textColor="#D06D88BD"
        android:gravity="end"
        android:layout_marginRight="16dp"/>

</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="280dp" />


</LinearLayout>